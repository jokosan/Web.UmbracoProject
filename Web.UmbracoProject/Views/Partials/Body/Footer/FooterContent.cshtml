                        @foreach (var item in socialLinks.Value<IEnumerable<IPublishedElement>>("socialLinkList"))
                        {
                            var linkSocial = item.Value<Link>("linkSocial");
                            <a href="@linkSocial.Url" class="@item.Value("nameSocial")" target="_blank"><i class="@item.Value("iconFooter")"></i></a>
