@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models;
@using Umbraco.Cms.Core.Models.PublishedContent;

@{
    var socialLinks = Umbraco.ContentAtXPath($"//socialLinkList")?.FirstOrDefault();
    var sl = Umbraco.Content(socialLinks);
    var contact = Umbraco.ContentAtXPath($"//{ContactDetails.ModelTypeAlias}")?.FirstOrDefault();
}
